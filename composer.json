{
    "name": "elcodi/product-bundle",
    "description": "Elcodi Product Bundle",
    "keywords": ["elcodi", "product", "ecommerce"],
    "homepage": "https://github.com/elcodi/ProductBundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        },
        {
            "name": "Aldo Chiecchia",
            "email": "zimage@tiscali.it"
        },
        {
            "name": "Symfony Community",
            "homepage": "https://github.com/elcodi/ProductBundle/contributors"
        }
    ],
    "require": {
        "php": ">=5.4",
        "doctrine/common": "~2.4",
        "doctrine/orm": "~2.4",

        "symfony/http-kernel": "~2.4",
        "symfony/config": "~2.4",
        "symfony/dependency-injection": "~2.4",
        "mmoreram/simple-doctrine-mapping": "~0.1",

        "elcodi/core-bundle": "~0.3.0",
        "elcodi/language-bundle": "~0.3.0",
        "elcodi/media-bundle": "~0.3.0",
        "elcodi/currency-bundle": "~0.3.0",
        "elcodi/attribute-bundle": "~0.3.0",
        "elcodi/product": "~0.3.0"
    },
    "require-dev": {
        "elcodi/test-common-bundle": "~0.3.0",
        "doctrine/data-fixtures": "~1.0",
        "phpunit/phpunit": ">=3.7"
    },
    "suggest": {
        "symfony/twig-bundle": "Required if using Twig extensions"
    },
    "autoload": {
        "psr-4": {
            "Elcodi\\Bundle\\ProductBundle\\": ""
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    }
}
